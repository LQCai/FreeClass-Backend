<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.starchild.common.dao.HelpInfoDao">
    <resultMap id="BaseResultMap" type="cn.starchild.common.model.HelpInfoModel">
        <id column="id" jdbcType="CHAR" property="id"/>
        <result column="help_category_id" jdbcType="CHAR" property="helpCategoryId"/>
        <result column="title" jdbcType="VARCHAR" property="title"/>
        <result column="status" jdbcType="TINYINT" property="status"/>
        <result column="sort" jdbcType="TINYINT" property="sort"/>
        <result column="creator" jdbcType="CHAR" property="creator"/>
        <result column="created" jdbcType="TIMESTAMP" property="created"/>
        <result column="modifier" jdbcType="CHAR" property="modifier"/>
        <result column="modified" jdbcType="TIMESTAMP" property="modified"/>
    </resultMap>
    <resultMap extends="BaseResultMap" id="ResultMapWithBLOBs" type="cn.starchild.common.model.HelpInfoModel">
        <result column="content" jdbcType="LONGVARCHAR" property="content"/>
    </resultMap>
    <sql id="Base_Column_List">
        id, help_category_id, title, status, sort, creator, created, modifier, modified
    </sql>
    <sql id="Blob_Column_List">
        content
    </sql>
    <update id="updateHelpInfo" parameterType="HelpInfoModel">
        update t_help_info
        <set>
            <if test="title != null">
                title = #{title,jdbcType=VARCHAR},
            </if>
            <if test="content != null">
                content = #{content,jdbcType=VARCHAR},
            </if>
            <if test="sort != null">
                sort = #{sort,jdbcType=TINYINT},
            </if>
            <if test="modifier != null">
                modifier = #{modifier,jdbcType=VARCHAR},
            </if>
            <if test="modified != null">
                modified = #{modified,jdbcType=TIMESTAMP},
            </if>
        </set>
        where id = #{id,jdbcType=CHAR}
    </update>
    <update id="deleteHelpInfo" parameterType="HelpInfoModel">
        update t_help_info
        <set>
            <if test="status != null">
                status = #{status,jdbcType=TINYINT},
            </if>
            <if test="modifier != null">
                modifier = #{modifier,jdbcType=VARCHAR},
            </if>
            <if test="modified != null">
                modified = #{modified,jdbcType=TIMESTAMP},
            </if>
        </set>
        where id = #{id,jdbcType=CHAR}
    </update>
    <select id="selectById" resultType="cn.starchild.common.model.HelpInfoModel" parameterType="string">
        select id
        from t_help_info
        where id = #{id}
          and status = 1
    </select>
    <select id="getHelpList" resultType="java.util.Map">
        select hi.id,
               hi.title,
               hi.content,
               hi.sort * 1 sort,
               hi.created,
               a.name
        from t_help_info hi
                 left join t_admin a on a.id = hi.creator
        where hi.status = 1
        ORDER BY hi.sort asc
    </select>
    <select id="selectHelpInfo" resultMap="BaseResultMap" parameterType="string">
        select *
        from t_help_info
        where id = #{id}
          and status = 1
    </select>

</mapper>